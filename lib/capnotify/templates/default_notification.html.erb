<html>
<head>
  <style>
    body {
      font: 12px "Helvetica", "Lucida Grande", "Trebuchet MS", Verdana, sans-serif;
    }
    .section h2 {
      color: #999;
      margin: 0;
    }

    .section {
      margin-bottom: 10px;
      border-radius: 10px;
      background-color: #eee;

      padding: 5px 20px;
    }

    dt {
      width: 15%;
      margin-right: 10px;
      display: inline-block;
      white-space: nowrap;

      clear: both;
    }

    dd {
      width: 65%;
      display: inline-block;
    }

    dl dt {
      font-weight: bold;
    }

    .log ul {
      font-family: monospace;

      list-style: none;
    }

    .log ul li {
      margin: 5px;
    }

    .log ul li a {
      font-weight: bold;
      padding: 2px 5px;
      background-color: #eee;
      color: #666;
      text-decoration: none;
    }

    .log ul li a:hover {
      text-decoration: underline;
      color: black;
    }

    #footer {
      font-size: .75em;
      text-align: center;
    }

  </style>
</head>
<body>

  <h1>
    <%= capnotify.appname %> deployment completed!
  </h1>

  <% capnotify.components.each do |component| %>
  <div class="<%= ['section', component.css_class].join(' ') %>">
    <h2><%= component.header %></h2>

    <% if component.content.is_a? Hash %>
    <dl>
    <% component.content.each do |k,v| %>
      <dt><%= k %></dt>
      <dd><%= v %></dd>
    <% end %>
    </dl>
    <% elsif component.content.is_a? Array %>

    <% elsif compoent.content.is_a? String %>

    <% end %>
  </div>
  <% end %>

  <div id="footer">
    Email generated by <a href="https://github.com/spikegrobstein/capnotify">Capnotify</a>
  </div>
</body>
</html>
