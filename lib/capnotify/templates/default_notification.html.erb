<html>
<head>
  <style>
    body {
      font: 12px "Helvetica", "Lucida Grande", "Trebuchet MS", Verdana, sans-serif;
    }
    .section h2 {
      color: #999;
      margin: 0;
    }

    .section {
      margin-bottom: 10px;
      border-radius: 10px;
      background-color: #eee;

      padding: 5px 20px;
    }

    dt {
      width: 15%;
      margin-right: 10px;
      display: inline-block;
      white-space: nowrap;

      clear: both;

      margin-bottom: 5px;
    }

    dd {
      width: 65%;
      display: inline-block;
      margin-bottom: 5px;
    }

    dl dt {
      font-weight: bold;
    }


    #footer {
      font-size: .75em;
      text-align: center;
      margin-top: 20px;
    }

    <% capnotify.components.each do |component| %>
      <%= component.custom_css %>

    <% end %>

  </style>
</head>
<body>

  <h1>
    <%= capnotify.appname %> deployment completed!
  </h1>

  <% capnotify.components.each do |component| %>
    <div class="<%= component.css_class %>">
      <h2><%= component.header %></h2>

      <%= component.render_content(:html) %>
  </div>
  <% end %>

  <div id="footer">
    Email generated by <a href="https://github.com/spikegrobstein/capnotify">Capnotify</a>
  </div>
</body>
</html>
