<html>
<head>
  <style>
    body {
      font: 12px "Helvetica", "Lucida Grande", "Trebuchet MS", Verdana, sans-serif;
    }
    .section h2 {
      color: #999;
      margin: 0;
    }

    .section {
      margin-bottom: 10px;
      border-radius: 10px;
      background-color: #eee;

      padding: 5px 20px;
    }

    dt {
      width: 15%;
      margin-right: 10px;
      display: inline-block;
      white-space: nowrap;

      clear: both;
    }

    dd {
      width: 65%;
      display: inline-block;
    }

    dl dt {
      font-weight: bold;
    }


    #footer {
      font-size: .75em;
      text-align: center;
    }

  </style>
</head>
<body>

  <h1>
    <%= capnotify.appname %> deployment completed!
  </h1>

  <% capnotify.components.each do |component| %>
  <div class="<%= component.css_class %>">
    <h2><%= component.header %></h2>

    <% if component.content(:html).is_a? Hash %>
    <dl>
    <% component.content(:html).each do |k,v| %>
      <dt><%= k %></dt>
      <dd><%= v %></dd>
    <% end %>
    </dl>
    <% elsif component.content(:html).is_a? Array %>
      <ul>
      <% component.content(:html).each do |row| %>
        <li>
          <%= row %>
        </li>
      <% end %>
      </ul>
    <% elsif component.content(:html).is_a? String %>
      <%= component.content(:html) %>
    <% end %>
  </div>
  <% end %>

  <div id="footer">
    Email generated by <a href="https://github.com/spikegrobstein/capnotify">Capnotify</a>
  </div>
</body>
</html>
